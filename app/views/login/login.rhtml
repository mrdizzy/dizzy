
<h1><%= bigarrow %> Login</h1>
<% form_tag do %>
<p>
<label for="name" ><%= diamond %> Name:</label>
<%= text_field_tag :name, params[:name] %>
</p>
<p>
<label for="password" ><%= diamond %> Password:</label>
<%= password_field_tag :password, params[:password] %>
</p>
<p>
<%= submit_button %>
</p>
<% end %>
</fieldset>