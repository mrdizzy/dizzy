<div id="poll">
	<h3 class="blue_bold"><%= asterisk %> Poll</h3>	
<p><span class="date"> <%= @poll.created_at.to_s(:long)  %></p>

<!-- Name of poll -->	
<p><%= solid_arrow %> <b><%= @poll.name %></b></p> 


<!-- Display radio buttons for each voting option -->
<% form_remote_tag :url => { :controller => "polls", :action => "vote" } do %>
	<% @poll.votes.each do |vote| %>
	
		<p><%= radio_button_tag :result, vote.id, false, { :class => "radio" } %>
		<%= vote.option %></p>
 
 	<% end %>
 	<p><%= submit_button %></p>
<% end %>

</div>