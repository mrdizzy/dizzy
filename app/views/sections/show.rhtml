<% @title = @section.content.title %>
<% @main_category = @section.content.main_category.name %>
<h1><%= asterisk %> <%= @section.content.title %></h1>
<h2><%= @section.content.description %></h2>

<%= render(:partial => "shared/section_list", :object => @section.content.sections, :locals => { :current_article_permalink => @section.permalink} ) %>

<% if @section.content.is_a?(Cheatsheet) %>
	<div id="cheatsheet">
<% else %>
	<div id="article">
<% end %>

<%= parse_cheatsheet_xml(@section.body) %>

<%= spiro %>
</div>