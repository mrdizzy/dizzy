<ul id="category_list" class="categories">
	<% Category.all.each do |category| %>
		
		<li id="category_<%= category.id %>"><%= link_to(category.name, category_path(category)) %>
		<% if administrator? %>
			 | <%= link_to_remote("delete", { :url => category_path(category.id), :method => :delete}) %>
		<% end %>
		</li>

	<% end %>
</ul>

<% if administrator? %>	
	<%= render :partial => "categories/form", :object => Category.new %>
<% end %>