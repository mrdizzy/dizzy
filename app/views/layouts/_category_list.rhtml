<div id="category_sidebar">
	

	<%	@categories = Category.find(:all, :order => :name) %>
	<h2 class="blue_bold"><%= asterisk %> Categories</h2>
			<ul class="categories">
			<% @categories.each do |category| %>
			<li><%= link_to category.name, { :controller => "content", :action => "articles_for_category", :id => category.id }, :method => :get %></li>
			<% end %>
			</ul>
</div>