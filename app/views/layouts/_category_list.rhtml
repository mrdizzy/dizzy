<% cache "category_list" do %>
<ul class="categories">
	<%	@categories = Category.find(:all, :order => :name) %>
	<% @categories.each do |category| %>
		<% if category.permalink == "cheatsheets" %>
			<li><%= link_to "Cheatsheets", cheatsheets_path %></li>
		<% else %>
			<li><%= link_to category.name, category_path(category.permalink) %></li>
		<% end %>
	<% end %>
</ul>
<% end %>