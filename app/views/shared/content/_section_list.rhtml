<div id="section_list">
<ul>		
	<% section_list.each do |section| %>
		<% if section.permalink == current_article_permalink %>
			<li><span class="bigger"><%= section.title %></span> - <%= section.summary %></li>
		
			<% else %>	
			<li><%= link_to section.title, {:controller => "sections", :action => "show", :article => section.content.permalink, :section => section.permalink } %> - <%= section.summary %></li>
		<% end %>
	<% end %>
	</ul>
</div>