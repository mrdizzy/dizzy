<h1><%= asterisk %> Open conversations</h1>

<table>
 
  <% @open_conversations.each do |conversation| %>
   <tr>
   
    
    <td><%= diamond %> <%= link_to conversation.subject, :action => 'view_thread', :id => conversation.id %></td>
    <td><%= conversation.customer.firstname %></td>
    <td><%= conversation.tickets.last.date.to_s(:long) %>
    <td><%= conversation.id %></td>
    </tr>
  <% end %>


</table>
