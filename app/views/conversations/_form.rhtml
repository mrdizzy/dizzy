<div id="contact_form">

<% remote_form_for :conversation, :url => conversations_path, :before => "Element.show('spinner')", :complete => "Element.hide('spinner')" do |form| %>

	<label for="conversation_subject"><%= diamond %> Subject</label>
	<%= form.text_field :subject %><br/>
	
	<label for="conversation_name"><%= diamond %> Name</label>
	<%= form.text_field :name %><br/>
			
	<label for="conversation_email"><%= diamond %> Email</label>
	<%= form.text_field :email %><br/>
		
	<label for="conversation_content"><%= diamond %> Message</label>
	<%= form.text_area :body, :size=>"20x10" %><br/>
	
	<%= submit_button %>	
	
<% end %>
	<div id="spinner" class="left" style="display:none;">
		<img alt="Spinner" src="/images/f/spinner.gif" />
	</div>
</div>