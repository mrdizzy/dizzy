
<div id="reply_form" style="display:none;">
	<h1><%= bigarrow %> Send reply</h1>
<% form_for(:ticket, @ticket, :url =>{:action => :send_reply, :id => @conversation }, :html =>{:multipart => true}) do |form| %>
	<p>
	To:
	<%= select_tag('ticket[to_recipients][]', options_for_select(@to_recipients), {:multiple=> :true}) %>
</p>
	<p>
	Cc:
	<%= select_tag('ticket[cc_recipients][]', options_for_select(@cc_recipients), {:multiple=> :true}) %>
</p>
	<p>
	<%= form.text_area :initial_report %>
	</p>  
	<div id="add_attachment">
	<p>
		<%= diamond %>
<%= link_to_remote "Add attachment", :url => { :controller => :conversations, :action => :add_attachment } %></p>
</div>	


	
	  	<%= submit_button %>
	<% end %>
</div>