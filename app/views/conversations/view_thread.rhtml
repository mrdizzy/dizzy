<html>
<head>
<style type="text/css">
.hidden { display: none; }
</style>

<%= javascript_include_tag :defaults %>
</head>
<body>

<!-- VIEWING THREAD -->
<div id="conversation">
	<h1><%= asterisk %> "<%= @conversation.subject %>"</h1>

<% @conversation.tickets.each do |ticket| %>
	
	<% if ticket.is_a?(IncomingTicket) %>
	<div class="odd" id="ticket_<%= ticket.id %>">
		<h3 class="blue_bold"><%= bigarrow %> Incoming</h3>
		<% else %>
		<div class="normal" id="ticket_<%= ticket.id %>">
			<h3 class="blue_bold"><%= bigleftarrow %> Outgoing</h3>
			<% end %> 
			<div id="details_<%= ticket.id %>"><p><%= diamond %> <%= link_to_remote "Show details", :url => { :controller => :conversations, :action => :view_ticket, :id => ticket.id } %></p></div>
			<div id="content_<%= ticket.id %>"><p>
<%= ticket.initial_report %> </p></div>
<p>
	<%= diamond %> <%= link_to_remote "Reply", :url => { :controller => :conversations, :action => :reply_form, :id => ticket.id } %></p>

</div>
<% end %>
</div>
</body>
</html>