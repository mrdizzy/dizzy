<p><label for="article_title"><%= diamond %> Title</label>
<%= form.text_field :title %></p>

<p><label for="article_content"><%= diamond %> Content</label>
<%= form.text_area :content %></p>
<%= drop_receiving_element ("article_content", :hoverclass => "hover", :url => { :action => :update_binary} ) %>
<p><label for="article_excerpt"><%= diamond %> Excerpt</label>
<%= form.text_area :excerpt %></p>
<p><label for="article_date"><%= diamond %> Date</label>
<%= form.datetime_select :date %></p>
<div id="select_author">
<p><label for="article_author"><%= diamond %> Author</label>
<%= form.collection_select(:author_id, Author.find(:all), :id, :username)%></p></div>

<div id="select_category">
<p><label for="article_categories"><%= diamond %> Category</label>
<%= form.collection_select(:category_ids, Category.find(:all, :order => :name), :id, :name, {}, {:multiple=> :true, :name=> 'article[category_ids][]'}) %></p></div>