<% remote_form_for :author, :url => { :action => :create_author } do |form| %>

<%= error_messages_for :author %>

<p><label for="author_firstname">Firstname</label>
<%= form.text_field :firstname %></p>

<p><label for="author_surname">Surname</label>
<%= form.text_field :surname %></p>
  
<p><label for="author_username">Username</label>
<%= form.text_field :username %></p>

<p><label for="author_email">Email</label>
<%= form.text_field :email %></p>
<%= submit_button %>
<% end %>