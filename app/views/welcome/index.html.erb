
	
		<% @articles.each do |content| %>
			<% if content.is_a?(Article) %>

				<span class="posted_ago">POSTED <%= time_ago_in_words(content.date).upcase %> AGO</span>   
				<h1 class="welcome"><%= link_to content.title, content_path(content.permalink) %></h1>
				<h2 class="lead_in"><%= content.description %></h2>
				
				<div id="article">
					<%= content.parsed_content %>
					<p><%= link_to content.comments.size.to_s + " comments", content_path(content.permalink) %></p>
				</div>
				
         	<% else %>
		 
				<span class="posted_ago">POSTED <%= time_ago_in_words(content.date).upcase %> AGO</span>   
	
				<table class="cheatsheet">
	
					<tr>
						<td class="first">
							<p><%= posted_in(content.categories, false) %><br/>
 							<%= content.version.version_number %></p>
 						</td>

						<td class="second">			
							<h2><%= square %> <%= link_to content.title, cheatsheet_path(content.permalink) %></h2>
							<p class="article_link_description"><%= content.description %></p>
						</td>
	
						<td class="third">
							<p>
								<%= image_tag("f/small_icons/html.png") %>
								<%= diamond %> 	<%= link_to "HTML", cheatsheet_path(content.permalink) %> 
							</p>	
							<p>
								<%= image_tag("f/small_icons/pdf.png") %>	
								<%= diamond %> <%= link_to "PDF", cheatsheet_path(content.permalink, :pdf) %> 
								(<%= number_to_human_size(content.pdf_binary_data.size) %>)
							</p>
						</td>
					</tr>

				</table>
				
			<% end %> 

		<%= spiro %>
            
	<% end %>