<div id="welcome">
	
	<div id="second_half">		
        
    	<!-- LOGOS -->
    	
		<p> 
			<%= solid_arrow %> <%= image_tag("f/small_icons/feed-icon-small.png")%> 
			<span class="posted_in"><%= link_to "RSS FEED", formatted_contents_path(:rss) %></span>
		</p>
			
		<div id="latest_container">
		
			<span class="posted_in"><%= solid_arrow %> <%= link_to("LATEST WORK", portfolios_path) %></span>
			
			<div id="latest_logo">
				<%= link_to image_tag(formatted_portfolio_item_path(:id => @logos.first.id, :format => :png)), portfolio_path(@logos.first.company_id) %>
			</div>
		
			<div id="logo_pagination"><%= render :partial => "logo_pagination" %></div>
			
		</div>
		
		<%= category_list %>

	</div>
	
	<div id="first_half">
	
		<div id="welcome_left">
					
			<!-- MAIN ARTICLE -->
			
			<span class="posted_ago">POSTED <%= time_ago_in_words(@main_article.date).upcase %> AGO</span>
			
			<% if @main_article.is_a?(Article) %>
				<h1><%= link_to(@main_article.title, content_path(@main_article.permalink)) %></h1>	
			<% else %>
				<h1><%= link_to(@main_article.title, cheatsheet_path(@main_article.permalink)) %></h1>	
			<% end %>


			
			<span class="posted_in">
			 	<%= solid_arrow %> <%= link_to(@main_article.main_category.name.upcase, category_path(@main_article.main_category.permalink)) %>
			</span>
				
			<p>	<%= truncate(@main_article.description, 300)%></p>	
				
			<!-- SECOND ARTICLE -->
			

			<% @articles.each do |article| %>
			
				<span class="posted_ago">POSTED <%= time_ago_in_words(article.date).upcase %> AGO</span>
				
				<% if @main_article.is_a?(Article) %>
					<h2><%= link_to(article.title, content_path(article.permalink)) %></h2>
				<% else %>
					<h2><%= link_to(article.title, cheatsheet_path(article.permalink)) %></h2>
				<% end %>
				
				<span class="posted_in">
				 	<%= solid_arrow %> <%= link_to(article.main_category.name.upcase, category_path(article.main_category.permalink)) %>
				</span>
				
				<p><%= article.description %></p>
			
			<% end %>		
						
		</div>
	
		<div id="welcome_right">			
		
			<% @snippets.each do |snippet| %>		
			
				<span class="posted_ago">POSTED <%= time_ago_in_words(snippet.date).upcase %> AGO</span>
				
				<h3><%= link_to(snippet.title, content_path(snippet.permalink)) %> </h3>	
				
				<span class="posted_in">
				 	<%= solid_arrow %> <%= link_to(snippet.main_category.name.upcase, category_path(snippet.main_category.permalink)) %>
				</span>
				
				<p><%= snippet.description %></p>
				
			<% end %>
		
	</div>
</div> 
